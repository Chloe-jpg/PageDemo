<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#DBEEF4">
    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dip"
        android:background="#686867"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose"
        android:textColor="#3838AC"
        android:textSize="20sp"
        android:padding="12dp"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dip"
        android:background="#686867"/>
    <ListView

        android:id="@+id/mylist"

        android:layout_width="match_parent"

        android:layout_height="300dp"

        ></ListView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dip"
        android:background="#686867"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write"
        android:textColor="#3838AC"
        android:textSize="20sp"
        android:padding="12dp"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dip"
        android:background="#686867"/>




    <ListView
        android:id="@+id/list_view"
        android:descendantFocusability="beforeDescendants"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_above="@+id/button1"
        android:divider="@null"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dip"
        android:background="#686867"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交"
        />



    <TextView
        android:text="控制字"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/Control_bit2"
        android:text="bit2~bit10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/Control_111B"
            android:text="运行命令"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/Control_110B"
            android:text="方式0停车"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/Control_101B"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="方式1停车" />

        <Button
            android:id="@+id/Control_100B"
            android:text="外部故障停车"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <Button
            android:id="@+id/Control_011B"
            android:text="方式2停车"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
    <TextView
        android:id="@+id/Control_bit3"
        android:text="bit3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/Control_bit3_0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="正转"/>

        <Button
            android:id="@+id/Control_bit3_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="反转"/>
    </LinearLayout>
    <TextView
        android:id="@+id/Control_bit4"
        android:text="bit4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/Control_bit4_0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="点动正转无效"/>

        <Button
            android:id="@+id/Control_bit4_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="点动正转"/>
    </LinearLayout>
    <TextView
        android:id="@+id/Control_bit5"
        android:text="bit5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/Control_bit5_0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="点动反转无效"/>

        <Button
            android:id="@+id/Control_bit5_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="点动反转"/>
    </LinearLayout>
    <TextView
        android:id="@+id/Control_bit6"
        android:text="bit6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/Control_bit6_0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="允许加减速"/>

        <Button
            android:id="@+id/Control_bit6_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="禁止加减速"/>
    </LinearLayout>
    <TextView
        android:id="@+id/Control_bit7"
        android:text="bit7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/Control_bit7_0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="上位机控制字1有效"/>

        <Button
            android:id="@+id/Control_bit7_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="上位机控制字1无效"/>
    </LinearLayout>
    <TextView
        android:id="@+id/Control_bit8"
        android:text="bit8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/Control_bit8_0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="主给定有效"/>

        <Button
            android:id="@+id/Control_bit8_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="主给定无效"/>
    </LinearLayout>
    <TextView
        android:id="@+id/Control_bit9"
        android:text="bit9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/Control_bit9_0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="故障复位有效"/>

        <Button
            android:id="@+id/Control_bit9_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="故障复位无效"/>
    </LinearLayout>


</LinearLayout></ScrollView>